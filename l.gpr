project L is

   for Main use ("Main.adb", "Primitif.adb", "TraiterLigne.adb", "Variables.adb");
   for Source_Dirs use ("src");

   package Builder is
      for Default_Switches ("ada") use ("-s");
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use ("-gnatwa", "-gnata", "-g");
   end Compiler;

   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;

end L;

