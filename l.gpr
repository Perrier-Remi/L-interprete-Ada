project L is

   for Main use ("main.adb", "primitif.adb", "interpreteur.adb", "memory.adb");
   for Source_Dirs use ("src");

   package Builder is
      for Default_Switches ("ada") use ("-s");
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use ("-gnatwa", "-gnata", "-g");
   end Compiler;

   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;
